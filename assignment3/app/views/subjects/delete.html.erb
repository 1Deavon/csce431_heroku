<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>
<div class="subjects delete">
    <h2>Delete books</h2>
    <%= form_for(@subject, :url => subject_path(@subject), :method => 'delete') do |f| %>
        <p> Are you sure you want to permanently delete this book from library? </p>
        <p> <%= @subject.title %></p>

        <div class="form-buttons">
            <%= f.submit("Delete book") %>
         </div>
     <% end %>
</div>

<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>
<div class="subjects new">
    <h2>Update Library</h2>

    <%= form_for(@subject, :url => subject_path(@subject), :method => 'patch')  do |f| %>
        <table summary="Subject form fields">
            <tr>
                <th>Title</th>
                <td><%= f.text_field(:title) %></td>
            </tr>
            <tr>
                <th>Author</th>
                <td><%= f.text_field(:author) %></td>
            </tr>
            <tr>
                <th>Genre</th>
                <td><%= f.text_field(:genre) %></td>
            </tr>
            <tr>
                <th>Price</th>
                <td><%= f.text_field(:price) %></td>
            </tr>
            <tr>
                <th>Published_date</th>
                <td><%= f.text_field(:published_date) %></td>
            </tr>
        </table>
        <div class="form-buttons">
            <%= f.submit("Update Library") %>
         </div>
        <% end %>
</div>


